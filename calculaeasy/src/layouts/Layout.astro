---
import "../styles/global.css";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

interface Props {
	title?: string;
	description?: string;
	canonical?: string;
	schema?: object;
}

const {
	title = "CalculaEasy - Calculadoras de Sueldo e Impuestos Uruguay",
	description = "Calculá tu sueldo líquido, aguinaldo, IVA y más. Herramientas gratuitas para trabajadores en Uruguay.",
	canonical = "https://calculaeasy.com/",
	schema,
} = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		{
			schema && (
				<script
					type="application/ld+json"
					set:html={JSON.stringify(schema)}
				/>
			)
		}
		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="canonical" href={canonical} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Outfit:wght@300..800&display=swap"
			rel="stylesheet"
		/>

		<!-- FAVICONS -->

		<link rel="icon" href="/custom-logo-ico.ico" />
		<link rel="shortcut icon" href="/custom-logo-ico.ico" />
		<link rel="icon" type="image/svg+xml" href="/custom-only-logo.svg" />



	</head>


	<body
		class="bg-slate-50 text-slate-900 font-['Outfit'] antialiased selection:bg-indigo-100 selection:text-indigo-900"
	>
		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
